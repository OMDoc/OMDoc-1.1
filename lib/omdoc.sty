% environment for the rsmatter attributes
\newenvironment{Introduction}{\paragraph{Introduction}}{\par}
\newenvironment{introduction}{\paragraph{Introduction}}{\par}
\newenvironment{linkage}{}{}
\newenvironment{elaboration}{\begin{Remark}}{\end{Remark}}

\def\om@definition{definition}
\def\om@assertion{assertion}
\def\om@symbol{symbol}
\def\om@example{example}
\def\om@proof{proof}
\def\om@axiom{axiom}
\newenvironment{omdocenv}[3]% type, label, key
{\gdef\om@arg{#1}%
\ifx\om@arg\om@definition\begin{rmenv}{#2}{#3}\fi%
\ifx\om@arg\om@assertion\begin{emenv}{#2}{#3}\fi%
\ifx\om@arg\om@symbol\begin{rmenv}{#2}{#3}\fi%
\ifx\om@arg\om@example\begin{rmenv}{#2}{#3}\fi%
\ifx\om@arg\om@proof\begin{rmenv}{#2}{#3}\fi%
\ifx\om@arg\om@axiom\begin{rmenv}{#2}{#3}\fi}%
{\ifx\om@arg\om@definition\end{rmenv}\fi%
\ifx\om@arg\om@assertion\end{emenv}\fi%
\ifx\om@arg\om@symbol\end{rmenv}\fi%
\ifx\om@arg\om@example\end{rmenv}\fi%
\ifx\om@arg\om@proof\end{rmenv}\fi%
\ifx\om@arg\om@axiom\end{rmenv}\fi}
\newcounter{env}
\newenvironment{rmenv}[2]% label, key
{\par\noindent{\bf #2}\def\@empty{}\def\@test{#1}%
\stepcounter{env}\ifx\@empty\@test\label{#1}\fi \arabic{env} }{\par}
\newenvironment{emenv}[2]% label, key
{\begin{rmenv}{#1}{#2}\em}{\end{rmenv}}
\newenvironment{proof}[2]{\par\noindent{#1}}{\kasten}

